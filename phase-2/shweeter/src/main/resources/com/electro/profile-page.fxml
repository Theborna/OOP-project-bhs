                                <Button fx:id="btnMessage" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false">
                                    <graphic>
                                        <ImageView fitHeight="150.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@images/icons8_email_send_96px.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="btnFollow" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="133.0" text="Follow" textFill="WHITE" />
                                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false">
                                    <graphic>
                                        <ImageView fitHeight="150.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" style="-fx-background-color: transparent;">
                                            <image>
                                                <Image url="@images/icons8_more_96px.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </buttons>
                        </ButtonBar>
                    </children>
                    <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
